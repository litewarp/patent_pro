{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:flowtype/recommended",
    "plugin:prettier/recommended"
],
  "plugins": [
    "react",
    "flowtype-errors",
    "prettier",
    "prettier/react",
    "prettier/flowtype"
  ],
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6
  },
  "rules": {
    "prettier/prettier": [
      "error", {
        "semi": false,
        "insertPragma": true
      }
    ],
    "no-unused-vars": ["error", { "vars": "all", "after-used" }],
    "flowtype/no-types-missing-file-annotation": 0,
    "flowtype-errors/show-errors": 2
  }
}
